        <Constraint
            android:id="@+id/space_touch_anchor"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/loadingLyricsSet"
        app:deriveConstraintsFrom="@+id/end">
        <Constraint
            android:id="@+id/albumArt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/third_horizontal_guideline"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="270dp"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/songTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumArt" />
        <Constraint
            android:id="@+id/songArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/songTitle" />
        <Constraint
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_horizontal_guideline" />
        <Constraint
            android:id="@+id/findingLyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar" />
        <Constraint
            android:id="@+id/lyricsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/center_horizontal_guideline" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/lyricsSet"
        app:deriveConstraintsFrom="@+id/end">
        <Constraint
            android:id="@+id/albumArt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/third_horizontal_guideline"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="270dp"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/songTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumArt" />
        <Constraint
            android:id="@+id/songArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_x_large"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/songTitle" />
        <Constraint
            android:id="@+id/lyricsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/center_horizontal_guideline" />
        <Constraint
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_horizontal_guideline" />
        <Constraint
            android:id="@+id/lyricsText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_xx_large"
            android:layout_marginEnd="@dimen/margin_xx_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/lyricsSource"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closeButton"
            app:layout_goneMarginTop="@dimen/margin_large" />
        <Constraint
            android:id="@+id/lyricsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/shuffleButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/shuffleButton" />
    </ConstraintSet>

    <Transition
        android:id="@+id/smallToMedium"
        app:constraintSetEnd="@+id/medium"
        app:constraintSetStart="@+id/start"
        app:duration="600"
        app:motionInterpolator="linear">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/space_touch_anchor"
            app:touchAnchorSide="top" />
    </Transition>

    <Transition
        android:id="@+id/mediumToFullScreen"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/medium"
        app:duration="600"
        app:motionInterpolator="linear" />

    <Transition
        android:id="@+id/endToLoadingLyrics"
        app:constraintSetEnd="@+id/loadingLyricsSet"
        app:constraintSetStart="@+id/end"
        app:duration="600" />

    <Transition
        android:id="@+id/loadingLyricsToLyrics"
        app:constraintSetEnd="@+id/lyricsSet"
        app:constraintSetStart="@+id/loadingLyricsSet"
        app:duration="600" />

    <Transition
        android:id="@+id/endToLyrics"
        app:constraintSetEnd="@+id/lyricsSet"
        app:constraintSetStart="@+id/end"
        app:duration="600" />

    <Transition
        android:id="@+id/lyricsToEnd"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/lyricsSet"
        app:duration="600" />

</MotionScene>